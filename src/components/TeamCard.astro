---
import { Image } from 'astro:assets';

interface ITeamCardProps {
  title: string;
  role: string;
  description: string;
  image: string;
  url: string;
}

const { title, role, description, image, url }: ITeamCardProps = Astro.props as ITeamCardProps;
---

<div class="bg-white h-full p-9 border border-dark-color rounded-3xl shadow-card">
  <div class="flex flex-col justify-between gap-7">
    <div class=`h-[100px] flex justify-between gap-5 ${!role || !role.length ? 'items-center' : 'items-end'}`>
      <Image src=`/images/${image}.webp` class="w-[100px] min-w-[100px] h-[100px] min-h-[100px]"  width="100" height="100" alt={title} />
      <div class="flex flex-col justify-end">
        <h3 class="font-medium">{title}</h3>
        <p class="text-lg">{role}</p>
      </div>
      <div class="h-full flex-1">
        <a href={url} target="_blank" rel="noopener noreferrer" arial-label=`Ver el perfil de trabajo de ${title}` class="w-[34px] min-w-[34px] h-[34px] min-h-[34px] flex">
          <Image src="/icons/linkedin-card.svg" alt={description} width="34" height="34" class="cursor-pointer" />
        </a>
      </div>
    </div>
    <div class="bg-dark-color w-full h-px"></div>
    <div>
      <p class="text-lg">{description}</p>
    </div>
  </div>
</div>