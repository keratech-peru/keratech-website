---
interface ISectionProps {
  id: string;
  title: string;
  description: string;
}

const { id, title, description }: ISectionProps = Astro.props as ISectionProps;
---

<section id={id}>
  <div class="flex flex-col gap-10 md:gap-20 py-8 md:py-12">
    <div class="w-full lg:w-[75%] flex flex-col lg:flex-row items-center lg:items-start gap-8 lg:gap-10">
      <h2 class="bg-green-color w-fit md:w-auto h-fit text-4xl md:text-[40px] text-center md:text-left font-medium px-2 py-1 rounded-lg">{title}</h2>
      <p class="text-base md:text-lg text-center md:text-left">{description}</p>
    </div>
    <slot />
  </div>
</section>